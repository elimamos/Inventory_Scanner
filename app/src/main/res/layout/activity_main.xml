<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emamos.stockscanner.MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Zeskanuj numer miejsca uÅ¼ytkowania:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dodaj nowy element:"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toBottomOf="@+id/evidenceCode" />


    <TextView
        android:id="@+id/room"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:height="200dp"
        android:text="room"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/evidence"
        app:layout_constraintLeft_toRightOf="@+id/roomCode"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.582"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />



    <TextView
        android:id="@+id/evidence"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="evidence"
        android:maxLines="10"
        android:lines="10"
        android:height="200dp"
        app:layout_editor_absoluteX="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toRightOf="@+id/evidenceCode"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/roomCode"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />



    <TextView
        app:layout_editor_absoluteX="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zeskanuj numer ewidencji:"
        android:layout_marginTop="-103dp"
        app:layout_constraintTop_toBottomOf="@+id/roomCode"
        android:layout_marginRight="204dp"
        android:layout_marginEnd="204dp" />


    <EditText
        android:id="@+id/elementCode"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Zeskanuj nazwe elementu"
        android:inputType="text"
        android:textSize="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1" />

    <EditText
            android:id="@+id/element_number"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="Zeskanuj numer elementu"
            android:inputType="text"
            android:textSize="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/elementCode"
            tools:layout_constraintLeft_creator="1" />

        <EditText
            android:id="@+id/comments"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Dodaj uwagi"
            android:inputType="text"
            android:textSize="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/element_number"
            tools:layout_constraintLeft_creator="1" />

        <EditText
            android:id="@+id/evidenceCode"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"

            android:ems="10"
            android:hint="np.E$2"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_constraintLeft_creator="1" />

        <EditText
            android:id="@+id/roomCode"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="np. P$1"
            android:inputType="text"

            android:nextFocusForward="@+id/whatthis"
            android:textSize="9dp"
            app:layout_constraintBottom_toTopOf="@+id/evidenceCode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.172"
            tools:layout_constraintLeft_creator="1" />



</android.support.constraint.ConstraintLayout>
